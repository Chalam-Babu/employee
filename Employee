import java.util.Scanner;

class Employee {
    private int empID;
    private String empName;
    private double noOfHoursWorked;
    private double hourlyPrice;

    public void setEmpID(int x) {
        empID = x;
    }

    public int getEmpID() {
        return empID;
    }

    public void setEmpName(String y) {
        empName = y;
    }

    public String getEmpName() {
        return empName;
    }

    public void setNoOfHoursWorked(double z) {
        noOfHoursWorked = z;
    }

    public double getNoOfHoursWorked() {
        return noOfHoursWorked;
    }

    public void setHourlyPrice(double a) {
        hourlyPrice = a;
    }

    public double getHourlyPrice() {
        return hourlyPrice;
    }

    public double getGrossSalary() {
        return noOfHoursWorked * hourlyPrice;
    }

    public double getNetSalary() {
        double grossSalary = getGrossSalary();
        double tax = 0.05 * grossSalary;
        if (grossSalary > 30000) {
            return grossSalary - tax;
        } else {
            return grossSalary;
        }
    }
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Employee emp = new Employee();

        System.out.print("Enter Employee ID: ");
        int empID = sc.nextInt();
        emp.setEmpID(empID);

        System.out.print("Enter Employee Name: ");
        String empName = sc.next();
        emp.setEmpName(empName);

        System.out.print("Enter No. of Hours Worked: ");
        double hoursWorked = sc.nextDouble();
        emp.setNoOfHoursWorked(hoursWorked);

        System.out.print("Enter Hourly Price: ");
        double hourlyPrice = sc.nextDouble();
        emp.setHourlyPrice(hourlyPrice);

        System.out.println("\nEmployee Details:");
        System.out.println("Employee ID: " + emp.getEmpID());
        System.out.println("Employee Name: " + emp.getEmpName());
        System.out.println("No. of Hours Worked: " + emp.getNoOfHoursWorked());
        System.out.println("Hourly Price: " + emp.getHourlyPrice());
        System.out.println("Gross Salary: " + emp.getGrossSalary());
        System.out.println("Net Salary: " + emp.getNetSalary());

        scanner.close();
    }
}


